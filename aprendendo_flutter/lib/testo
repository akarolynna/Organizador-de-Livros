import 'package:flutter/material.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'My App',
      theme: ThemeData(primarySwatch: Colors.yellow),
      home: Scaffold(
        appBar: AppBar(
          title: const Text(
            'Livros',
            style: TextStyle(
              color: Colors.white,
              fontWeight: FontWeight.bold,
              fontSize: 20,
            ),
          ),
          backgroundColor: const Color.fromARGB(255, 255, 58, 137),
        ),
        body: Container(
          margin: const EdgeInsets.all(16), // Padding ao redor do Stack
          child: Stack(
            children: [
              // Container com margem
              Container(
                //Construindo nosso card! Comando CSS para que ele possua sua estrutura externa
                margin: const EdgeInsets.only(
                    bottom: 16), // Margem para separar dos próximos elementos
                height: 200,
                decoration: BoxDecoration(
                  borderRadius: BorderRadius.circular(10),
                  color: Colors.white,
                  boxShadow: [
                    BoxShadow(
                      color: Colors.grey.withOpacity(0.5),
                      spreadRadius: 5,
                      blurRadius: 7,
                      offset: const Offset(0, 3),
                    ),
                  ],
                ),

                //Construindo nossas colunas para a respectiva disposição de cada elemento na tela
                child: Row(
                  mainAxisAlignment: MainAxisAlignment.spaceAround,
                  crossAxisAlignment: CrossAxisAlignment.center,
                
                  children: [
                    //Container para a capa do nosso livro
                    Container(
                      margin:  EdgeInsets.all(10),
                      color: Colors.grey,
                      width: 100,
                    ),
                    //Texto
                    const Column(
                      
                       children: [
                      
                      Padding(
                        padding: EdgeInsets.only( left: 20,top: 20), // Margem inferior específica
                        child: Text('A Hipótese do Amor',style: TextStyle( fontWeight: FontWeight.bold, fontSize: 20),
                        ),
                      ),
                       Padding(
                        padding: EdgeInsets.only(right: 50, top: 15), child: Text ('Capítulos Totais: 15'),),
                     Padding(
                        padding: EdgeInsets.only(right: 53,top: 8), child:  Text('Capítulos Lidos: 10'),),
                    ]),
                    Tooltip(
                      message:
                          'Clique aqui e Adicione mais um capítulo lido ao seu livro!',
                      child: ElevatedButton(
                        onPressed: () {},
                        child: Icon(Icons.add),
                      ),
                    )
                  ],
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
